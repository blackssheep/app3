<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app3">
    <!-- 从sdcard中读取数据的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--上网权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:name=".Myapplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.LoginActivity" android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".views.RegisterActivity" android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".views.MainActivity" />
        <activity android:name=".views.FindActivity" android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".views.AboutOursActivity"/>
        <activity android:name=".views.RevisePasswordActivitty"/>
        <activity android:name=".views.ShezhiActivity"/>
        <activity android:name=".views.ReviseInfoActivity"/>
        <activity android:name=".views.WriteActivity"/>
        <activity android:name=".views.ShowActivity" android:theme="@style/Theme.Design.NoActionBar"/>
    </application>

</manifest>